{
    "compilerOptions": {
      "target": "ES2018",
      "module": "ES2020",
      "moduleResolution": "node",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": false,
      "lib": [
        "es6",
        "dom"
      ]
    },
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}